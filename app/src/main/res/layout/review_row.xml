<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:clickable="false"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:background="@drawable/review_background"
        android:padding="0dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/customer_name"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="198dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="19dp"
            android:layout_marginBottom="9dp"
            android:fontFamily="@font/roboto_light"></TextView>

        <ImageView
            android:id="@+id/star_rating"
            android:layout_width="110dp"
            android:layout_height="27dp"
            android:layout_above="@+id/customer_review"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="63dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="14dp"
            android:layout_toEndOf="@+id/customer_name"
            android:background="@drawable/five_star">

        </ImageView>

        <TextView
            android:id="@+id/customer_review"
            style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/customer_name"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="13dp"
            android:fontFamily="@font/roboto_light"></TextView>

    </RelativeLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />
</LinearLayout>
